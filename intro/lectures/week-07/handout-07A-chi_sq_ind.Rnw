\subsection*{R Code}
\begin{verbatim}
priority <- as.factor(c(rep("grades",63),rep("popular",31),rep("sports",25),
   rep("grades",88),rep("popular",55),rep("sports",33)))

grade <- as.factor(c(rep("4th",119),rep("5th",176)))

table(grade,priority)

mosaicplot(table(grade,priority))

# either load the inference function
inference(grade,priority,est="proportion",type="ht",method="theoretical",
  alternative="greater")

# or use the built in function
chisq.test(grade,priority)
